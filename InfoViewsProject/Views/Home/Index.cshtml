                    var eventData;
                    var formatData;
                    if (title) {
                        eventData = {
                            title: title,
                            start: start,
                            end: end
                        };
                        var startFormat = moment(start).format('YYYY/MM/DD HH:mm');
                        var endFormat = moment(end).format('YYYY/MM/DD HH:mm');

                        formatData = {
                            title: title,
                            start: startFormat,
                            end: endFormat
                        };

                        $.ajax({
                            url: 'setEvent.php',
                            data: { formatData: formatData },
                            type: "POST",
                            success: function (json) {
                                alert(json);
